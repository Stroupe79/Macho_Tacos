     * Create a button in `index.handlebars` that will submit the user input into the database. --}}


<h1>Macho Taco</h1>

<ul>
  {{#each tacos}}
  <li>
	<p><span class="label">Taco Name:</span> {{this.taco_name}}</p>
      <p><span class="label">Shell:</span> {{this.shell}}</p>
      <p><span class="label">Vegetarian:</span> {{this.veg}}</p>

      <button data-id="{{this.id}}" class="delTaco">Delete</button>

      {{!-- <a href="/{{this.id}}">Update this taco</a> --}}
	<button class="pickup-taco" data-id="{{this.id}}">Picked up</button>
</li>

  {{/each}}
</ul>


<h2>Add a Taco</h2>
<form class="create-form">

  <div class="form-group">
    <label for="taco">Taco Name:</label>
    <input type="text" id="taco" name="name">
  </div>

  <div class="form-group">
    <label for="shell">Shell Type:</label><br>
    <input type="radio" name="shell" value="Crunchy" checked> Crunchy Shell<br>
    <input type="radio" name="shell" value="Soft">Soft Shell
  </div>

  <div class="form-group">
    <label for="veg">Vegetarian?</label><br>
    <input type="radio" name="veg" value="1" checked> Yes<br>
    <input type="radio" name="veg" value="0"> No
  </div>

  <button type="submit">Add Taco</button>
</form>
